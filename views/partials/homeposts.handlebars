
<div class="flex-column container post-feed"> 
  {{#each posts}}
    <ul class="list-group list-group-dividered list-group-full">
      <li class="list-group-item dash-feed" data={{id}}>
        <div class="media">
          <div class="media-body row" >
            <div class = "col">
               <h4 class="media-heading">{{title}}</h4>
            </div>
            <div class = "col">
              <p class="text-right small-text hidden"> <span style="display: none" id="username" >{{user.name}} on </span>{{date_created}}</p>
            </div>
            <div class = "hidden" style="display: none" id ="content">{{content}}</div>
          </div>
        </div>
        <button class = "hidden com-buttons" style="display: none" id="comment-btn">comment</button>
        <button class = "hidden hide-buttons" style="display: none" id="hide-btn">hide</button>
        
        <div style="display: none" id ="comments">
          {{>comments}}
        </div>
      </li>
    </ul>
  {{/each}}
</div>